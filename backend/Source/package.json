{
  "name": "gfk-bba-backend",
  "version": "1.0.2",
  "description": "the backend of the gfk-bba project",
  "author": "Peter Dickten, dcs",
  "license": "MIT",
  "engines": {
    "node": "10.7.0"
  },
  "scripts": {
    "docs": "rm -rf ../../docs/backend/* && typedoc --hideGenerator --name 'Backend of the gfk-bba project' --exclude ./src/dist --out ../../docs/backend/ ./src/ && open ../../docs/backend/index.html",
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "swagger": "ts-node -r tsconfig-paths/register src/mainSwagger.ts",
    "kill:dev": "lsof -i :3001 | awk -v OFS='\t' 'NR>1 {print \"kill \" $2}' | bash",
    "start:dev": "cp ../Config/Backend/.env.dev ./.env && cp ../Config/Database/ormconfig.dev ./ormconfig.json && nodemon",
    "prestart:prod": "npm install && rm -rf dist && tsc && rm -rf ./dist/public && cp -r ./src/public ./dist/",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "migrate": "ts-node ./node_modules/.bin/typeorm  migration:run",
    "migrate:revert": "ts-node ./node_modules/.bin/typeorm  migration:revert",
    "predeploy:prod": " rm -rf node_modules && ssh root@51.15.215.167 'rm -rf ./Source/*'",
    "deploy:prod": "scp -r ../Source root@51.15.215.167:",
    "postdeploy:prod": "ssh root@51.15.215.167 'cp ./Source/ormconfig.prod ./Source/ormconfig.json'",
    "postinstall": "rm -f node_modules/web3/index.d.ts",
    "build:dockerimage": "docker build -t dcsfuerth/gfk-bba:1.0.0 -t dcsfuerth/gfk-bba:latest .",
    "deploy:dockerimage": "npm run build:dockerimage      && docker push dcsfuerth/gfk-bba:1.0.0      && docker push dcsfuerth/gfk-bba:latest"
  },
  "dependencies": {
    "@nestjs/common": "^5.3.6",
    "@nestjs/core": "^5.3.6",
    "@nestjs/jwt": "^0.1.3",
    "@nestjs/passport": "^5.0.2",
    "@nestjs/swagger": "^2.4.6",
    "@nestjs/typeorm": "^5.1.0",
    "@sendgrid/mail": "^6.3.1",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "fastify-formbody": "^2.0.0",
    "generate-password": "^1.4.1",
    "md5": "^2.2.1",
    "nodemailer": "^6.4.16",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.2",
    "solc": "^0.4.19",
    "typedarray-to-buffer": "^3.1.5",
    "typeorm": "^0.2.7",
    "typescript": "^2.6.2",
    "web3": "^1.0.0-beta.54",
    "yaeti": "^1.0.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.0.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.6.34",
    "@types/supertest": "^2.0.4",
    "ganache-cli": "^6.0.3",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "truffle-hdwallet-provider": "0.0.3",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "5.3.2",
    "typedoc": "^0.15.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
